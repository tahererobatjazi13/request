<resources>

    <!-- text style (font-size-color) -->
    <style name="XLargeBoldTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/x_large_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="LargeBoldTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="MediumBoldTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="SmallBoldTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="XSmallBoldTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/x_Small_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="XXSmallBoldTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/xx_Small_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="LargeTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="MediumTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="SmallTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="XSmallTextStyle">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/x_Small_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="MediumTextAppearanceStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="XSmallTextAppearanceStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textSize">@dimen/x_Small_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>


    <!-- ================================================================= -->
    <!-- buttons (default - outline - white corner)-->
    <style name="ButtonDefault" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/medium_size</item>
    </style>

    <!-- ================================================================= -->
    <style name="BottomNavTextStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <!-- edit text-->
    <style name="Input">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="android:textColorHint">?attr/colorSurface</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/iran_sans</item>
        <item name="android:gravity">end</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="RoundedCardViewStyle">
        <item name="cardCornerRadius">@dimen/normal_size</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorBasic</item>
        <item name="elevation">0dp</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <!--<item name="strokeColor">?attr/colorSurface</item>
        <item name="strokeWidth">1dp</item>-->
    </style>

    <style name="RoundedCardViewStrokeStyle">
        <item name="cardCornerRadius">@dimen/normal_size</item>
        <item name="cardBackgroundColor">?attr/colorBasic</item>
        <item name="cardElevation">@dimen/_3sdp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="RoundedCardViewStyleCustom">
        <item name="cardCornerRadius">@dimen/normal_size</item>
        <item name="cardBackgroundColor">?attr/colorBackSurface</item>
        <item name="elevation">1dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_size</item>
    </style>


    <style name="RoundedBottomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="PersianDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="CollapsedTitleStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ExpandedTitleStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/transparent</item>

    </style>

</resources>
