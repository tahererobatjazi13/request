<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="ir.kitgroup.request.feature.home.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_businessSideFragment"
            app:destination="@id/businessSideFragment" />
        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/businessSideFragment"
        android:name="ir.kitgroup.request.feature.business_side.ui.BusinessSideFragment"
        android:label="BusinessSideFragment"
        tools:layout="@layout/fragment_business_side"/>
    <fragment
        android:id="@+id/productFragment"
        android:name="ir.kitgroup.request.feature.product.ui.ProductFragment"
        android:label="ProductFragment"
        tools:layout="@layout/fragment_product_list"/>

</navigation>
